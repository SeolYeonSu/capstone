<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
						"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">
<select id="selectUserID" parameterType="HashMap" resultType="HashMap">
  <![CDATA[
   SELECT
    COUNT(ID) AS RESULT 
   FROM USER_INFO 
   WHERE 
    ID = #{ID} 
  ]]>
 </select>
 <insert id="insertUserData" parameterType="HashMap">
  <![CDATA[
   INSERT INTO USER_INFO 
   (
   ID,
   PASSWORD, 
    NAME, 
    TEL
    ) 
   VALUES 
   (
    #{ID}, 
    #{PASSWORD},
    #{NAME}, 
    #{TEL}
   )
  ]]>
 </insert>
 <select id="selectUserInfo" parameterType="HashMap" resultType="HashMap">
  /* 로그인 - 사용자 정보 조회 */
  <![CDATA[
   SELECT 
    ID,
    ACC
   FROM USER_INFO 
   WHERE 
    ID = #{ID}
   and
    PASSWORD = #{PASSWORD}
  ]]>
 </select>
 
 <select id="selectRpcCheck" parameterType="HashMap" resultType="HashMap">
  <![CDATA[
  	SELECT
  		COUNT(RPC_INDEX) AS RESULT
    FROM 
   		RPCOMPLETED 
    WHERE 
    	RPC_ID = #{ID}
    AND
    	RPC_CHECK = 0
  ]]>
 </select>
 
 <update id="updateRpcCheck" parameterType="hashmap">
    <![CDATA[
        UPDATE RPCOMPLETED
        SET
            RPC_CHECK = 1
        WHERE
            RPC_ID = #{ID}
    ]]>
 </update>
 
 <select id="selectUserStop" parameterType="HashMap" resultType="HashMap">
  <![CDATA[
  	SELECT
  		US_INDEX, US_ID, US_DAY, US_START_TIME, US_END_TIME
    FROM 
   		USERSTOP
    WHERE 
    	US_ID = #{ID}
  ]]>
 </select>
 
  <insert id="insertUserStop" parameterType="hashmap">
    <![CDATA[
        INSERT INTO USERSTOP
	        (
			    US_ID
	        )
	        VALUES
	        (
	            #{ID}
	        )
    ]]>
	</insert>
	
	 <update id="updateUsDay" parameterType="hashmap">
    <![CDATA[
        UPDATE USERSTOP
        SET
            US_DAY = #{DAY}
        WHERE
            US_ID = #{ID}
    ]]>
 </update>
 
</mapper>