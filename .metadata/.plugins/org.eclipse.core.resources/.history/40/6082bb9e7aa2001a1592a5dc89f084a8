<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
						"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="admin">
	<select id="selectReportList" parameterType="hashmap" resultType="hashmap">
        <![CDATA[
            SELECT
            	RP_RID, 
            	RP_IDX, 
            	RP_REASON, 
            	RP_DATE,
            	COUNT(RP_IDX) AS C
			FROM
				REPORT
			WHERE 
				RP_CHECK = 0
			GROUP BY
				RP_IDX
			ORDER BY 
				COUNT(RP_IDX) DESC, 
				RP_DATE ASC
        ]]>
    </select>
    
    <select id="selectUserList" parameterType="hashmap" resultType="hashmap">
        <![CDATA[
            SELECT
            	RP_ID
			FROM
				REPORT
			WHERE 
				RP_IDX = #{IDX}
        ]]>
    </select>
    
    <select id="selectReportBoard" parameterType="hashmap" resultType="hashmap">
        <![CDATA[
            SELECT 
            	TITLE, CONTENTS
			FROM 
				TB_BOARD
			WHERE 
				IDX = #{IDX}
        ]]>
    </select>
	
	<update id="updateReport" parameterType="hashmap">
    <![CDATA[
        UPDATE REPORT
        SET
            RP_CHECK = 1
        WHERE
            RP_IDX = #{IDX}
    ]]>
	</update>
	
	<update id="deleteBoard" parameterType="hashmap">
    <![CDATA[
        UPDATE TB_BOARD
        SET
            DEL_GB = 'Y'
        WHERE
            IDX = #{IDX}
    ]]>
	</update>
	
	<insert id="insertRpCompleted" parameterType="hashmap">
    <![CDATA[
        INSERT INTO RPCOMPLETED
	        (
			    RPC_IDX,
			    RPC_ID,
			    RPC_DATE,
			    RPC_ADMIN,
			    RPC_DELETE,
			    RPC_STOP
	        )
	        VALUES
	        (
	            #{IDX},
	            #{ID},
	            now(),
	            #{ADMINID},
	            #{CHECKDELETE},
	            #{CHECKSTOP}
	        )
    ]]>
	</insert>
	
</mapper>
