<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
						"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="admin">
	<select id="selectReportList" parameterType="hashmap" resultType="hashmap">
        <![CDATA[
            SELECT
            	RP_RID, 
            	RP_IDX, 
            	RP_REASON, 
            	RP_DATE,
            	COUNT(RP_IDX) AS C
			FROM
				REPORT
			WHERE 
				RP_CHECK = 0
			GROUP BY
				RP_IDX
			ORDER BY 
				COUNT(RP_IDX) DESC, 
				RP_DATE ASC
        ]]>
    </select>
    
    <select id="selectRpComList" parameterType="hashmap" resultType="hashmap">
        <![CDATA[
            SELECT
            	RPC_INDEX,
            	RPC_IDX,
            	RPC_ID,
            	RPC_DATE,
            	RPC_ADMIN,
            	RPC_DELETE,
            	RPC_STOP,
            	RPC_REASON
			FROM
				RPCOMPLETED
			ORDER BY 
				RPC_INDEX DESC
        ]]>
    </select>
    
    <select id="selectUserList" parameterType="hashmap" resultType="hashmap">
        <![CDATA[
            SELECT
            	RP_ID
			FROM
				REPORT
			WHERE 
				RP_IDX = #{IDX}
        ]]>
    </select>
    
    <select id="selectReportBoard" parameterType="hashmap" resultType="hashmap">
        <![CDATA[
            SELECT 
            	TITLE, CONTENTS
			FROM 
				TB_BOARD
			WHERE 
				IDX = #{IDX}
        ]]>
    </select>
	
	<update id="updateReport" parameterType="hashmap">
    <![CDATA[
        UPDATE REPORT
        SET
            RP_CHECK = 1
        WHERE
            RP_IDX = #{IDX}
    ]]>
	</update>
	
	<update id="deleteBoard" parameterType="hashmap">
    <![CDATA[
        UPDATE TB_BOARD
        SET
            DEL_GB = #{DELETESTATE}
        WHERE
            IDX = #{IDX}
    ]]>
	</update>
	
	<insert id="insertRpCompleted" parameterType="hashmap">
    <![CDATA[
        INSERT INTO RPCOMPLETED
	        (
			    RPC_IDX,
			    RPC_ID,
			    RPC_DATE,
			    RPC_ADMIN,
			    RPC_DELETE,
			    RPC_STOP,
			    RPC_REASON,
			    RPC_CHECK
	        )
	        VALUES
	        (
	            #{IDX},
	            #{ID},
	            now(),
	            #{ADMINID},
	            #{CHECKDELETE},
	            #{CHECKSTOP},
	            #{REASON},
	            #{RPCCHECK}
	        )
    ]]>
	</insert>
	
	<update id="updateRpcom" parameterType="hashmap">
    <![CDATA[
        UPDATE RPCOMPLETED
        SET
            RPC_DELETE = #{CHECKDELETE},
            RPC_DATE = now(),
            RPC_CHECK = #{RPCCHECK}
        WHERE
            RPC_INDEX = #{INDEX}
    ]]>
	</update>
	
	<select id="selectUserStop" parameterType="HashMap" resultType="HashMap">
	  <![CDATA[
	  	SELECT
	  		US_INDEX, US_ID, US_DAY, US_START_TIME, US_END_TIME
	    FROM 
	   		USERSTOP
	    WHERE 
	    	US_ID = #{ID}
	  ]]>
	 </select>
	
	 <insert id="insertUserStop" parameterType="hashmap">
    <![CDATA[
        INSERT INTO USERSTOP
	        (
			    US_ID,
			    US_DAY
	        )
	        VALUES
	        (
	            #{ID},
	            #{CHECKSTOP}
	        )
    ]]>
	</insert>
	
	  <update id="updateUsDay" parameterType="hashmap">
	    <![CDATA[
	        UPDATE USERSTOP
	        SET
	            US_DAY = #{CHECKSTOP}
	        WHERE
	            US_ID = #{ID}
	    ]]>
	 </update>
	 
	 <update id="updateUsEnd" parameterType="hashmap">
	    <![CDATA[
	        UPDATE USERSTOP
	        SET
	            US_END_TIME = #{END}
	        WHERE
	            US_ID = #{ID}
	    ]]>
	 </update>
	
	 <insert id="insertAdminLog" parameterType="hashmap">
	    <![CDATA[
	        INSERT INTO ADMINLOG
		        (
				    AL_ID,
				    AL_DATE,
				    AL_IDX,
				    AL_REASON
		        )
		        VALUES
		        (
		            #{ID},
		            NOW(),
		            #{IDX},
		            #{REASON}
		        )
	    ]]>
	 </insert>
</mapper>
